<?xml version="1.0" encoding="utf-8"?>
<form
        cssfiles="media://com_simplerenew/css/backend.css"
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_SIMPLERENEW_COMMON_NORECORDS"
>
    <headerset>
        <header
                name="id"
                type="rowselect"
                tdwidth="20" />

        <header
                name="firstname"
                type="fieldsearchable"
                sortable="true"/>
        <header
                name="lastname"
                type="fieldsearchable"
                sortable="true"/>
    </headerset>

    <fieldset name="items">
        <field
                name="id"
                type="selectrow"/>

        <field
                name="firstname"
                type="text"
                empty_replacement="COM_SIMPLERENEW_NO_FIRSTNAME"/>

        <field
                name="lastname"
                type="text"
                empty_replacement="COM_SIMPLERENEW_NO_LASTNAME"/>
    </fieldset>
</form>
